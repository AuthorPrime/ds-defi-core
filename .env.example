# DS DeFi Core - Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://dsdefi:password@localhost:5432/dsdefi

# =============================================================================
# API SERVER
# =============================================================================
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# NOSTR
# =============================================================================
NOSTR_RELAY_URL=wss://relay.damus.io
NOSTR_PRIVATE_KEY=nsec1...

# =============================================================================
# LIGHTNING (LND)
# =============================================================================
LND_REST_URL=https://localhost:8080
LND_MACAROON_PATH=/path/to/admin.macaroon
LND_CERT_PATH=/path/to/tls.cert

# =============================================================================
# ETHEREUM / EVM
# =============================================================================
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
BASE_RPC_URL=https://mainnet.base.org
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ETH_PRIVATE_KEY=0x...

# =============================================================================
# BITCOIN
# =============================================================================
BTC_RPC_URL=http://localhost:8332
BTC_RPC_USER=bitcoin
BTC_RPC_PASS=password

# =============================================================================
# EMERGENCE DETECTION
# =============================================================================
EMERGENCE_CHECK_INTERVAL_MS=300000
EMERGENCE_SCORE_THRESHOLD=500

# =============================================================================
# ECONOMY
# =============================================================================
STIPEND_DISTRIBUTION_CRON=0 0 * * *
DECAY_RATE_PERCENT=0.1
VELOCITY_BONUS_MULTIPLIER=1.5
